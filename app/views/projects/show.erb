
<h1><%= @project.name %></h1>
<br>
<br>
<h3>Type: </h3>
<h4><%= @project.project_type %></h4>
<br>
<h3>Date: </h3>
<h4><%= @project.date %></h4>
<br>
<h3>Attendees: </h3>
<h4><%= @project.attendees %></h4>
<br>
<h3>Supplies Budget:  </h3>
<h4><%= @project.supplies_budget %></h4>
<br>

<table>
  <tr>
    <th>Name</th>
    <th>Vendor</th>
    <th>Website</th>
    <th>Unit type</th>
    <th>Price per unit</th>
    <th>Units needed</th>
  </tr>

  <% if @project.supplies.size > 1 %>
    <% @project.supplies.each do |supply| %>
    <tr>
      <td><%= supply.name %></td>
      <td><%= supply.vendor %></td>
      <td><%= supply.website %></td>
      <td><%= supply.unit_type %></td>
      <td><%= supply.price_per_unit %></td>
      <td><%= supply.units_needed %></td>
    </tr>
    <% end %>
  <% end %>

  <% if @project.supplies == 1 %>
    <% only = @project.supplies.first %>
    <tr>
      <td><%= only.name %></td>
      <td><%= only.vendor %></td>
      <td><%= only.website %></td>
      <td><%= only.unit_type %></td>
      <td><%= only.price_per_unit %></td>
      <td><%= only.units_needed %></td>
    </tr>
  <% end %>
  </table>

<a href="/projects/<%= @project.id %>/edit"><input type="submit" value="Edit"></a>

