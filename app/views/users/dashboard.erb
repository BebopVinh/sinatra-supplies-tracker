<h2>Welcome to your dashboard, <%=@user.name%>!</h2>


<h3>My Projects</h3>

  <% if @projects %>
    <% @projects.sort.each do |project| %>
      <li> <a href="/projects/<%= project.id %>"><%= project.name %></a>
    <% end %>
  <% else %>
      <br>
      <br>
      <h3> Let's get started! Click the button to create a new project.</h3>
      <br>
  <% end %>

<a href="/projects/new"><input type="submit" value="Create New Project"></a>

