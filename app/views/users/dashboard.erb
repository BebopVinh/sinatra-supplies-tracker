<h2>Welcome to your dashboard, <%=@user.name%>!</h2>


<h3>My Projects</h3>

  <% if @user.projects %>
    <%  if @user.projects.size == 1 %>
      <li><a href="/projects/<%= @my_projects[0].id %>"><%= project.name %></a>
      <br>
      <br>
    <% elsif @user.projects.size > 1 %>
      <% @user.projects.sort.each do |project| %>
        <li> <a href="/projects/<%= project.id %>"><%= project.name %></a>
      <% end %>
    <% else %>
        <br>
        <br>
        <h3> Let's get started! Click the button to create a new project.</h3>
        <br>
    <% end %>
  <% end %>

  <a href="/projects/new"><input type="submit" value="Create New Project"></a>


  <h3>My Supplies</h3>

    <% if @user.supplies %>
      <%  if @user.supplies.size == 1 %>
        <li><a href="/supplies/<%= @user.supplies[0].id %>"><%= supply.name %></a>
        <br>
        <br>
      <% elsif @user.supplies.size > 1 %>
        <% @user.supplies.sort.each do |supply| %>
          <li> <a href="/supplies/<%= supply.id %>"><%= supply.name %></a>
        <% end %>
      <% else %>
          <br>
          <br>
          <h3> Let's get started! Click the button to create a new supply.</h3>
          <br>
      <% end %>
    <% end %>

  <br>
  <br>


<a href="/supplies/new"><input type="submit" value="Create New Supply"></a>
